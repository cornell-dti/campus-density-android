<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/search"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:iconifiedByDefault="false"
            android:focusable="false"
            app:queryHint="Search"
            android:clickable="true" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/filterChips"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:singleSelection="true"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            app:chipSpacing="15dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/all"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/helvetica_font"
                android:checked="true"
                android:text="All"
                app:chipBackgroundColor="@drawable/chip_color_toggle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/favorites"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/helvetica_font"
                android:foregroundGravity="center"
                android:gravity="center"
                app:chipBackgroundColor="@drawable/chip_color_toggle"
                app:chipIcon="@drawable/heart"
                app:chipIconVisible="true"
                app:chipStartPadding="20dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/north"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/helvetica_font"
                android:text="North"
                app:chipBackgroundColor="@drawable/chip_color_toggle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/west"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/helvetica_font"
                android:text="West"
                app:chipBackgroundColor="@drawable/chip_color_toggle" />

            <com.google.android.material.chip.Chip
                android:id="@+id/central"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/helvetica_font"
                android:text="Central"
                app:chipBackgroundColor="@drawable/chip_color_toggle" />

        </com.google.android.material.chip.ChipGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout">

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/facilities"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:scrollbars="vertical" />
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
    </LinearLayout>

</RelativeLayout>